<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3380FF"
    android:backgroundTint="#3380FF"
    android:backgroundTintMode="src_in"
    tools:context=".ui.homeScreen.HomeFragment" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="100"
        android:scaleType="centerCrop"
        android:src="@drawable/interconsulta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_new"
        android:layout_width="253dp"
        android:layout_height="71dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#8AFB07"
        android:backgroundTintMode="src_in"
        android:text="Nuevo Paciente"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="253dp"
        android:layout_height="71dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/roundedbutton"
        android:text="Buscar Paciente"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_new"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_new"
        app:layout_constraintTop_toBottomOf="@+id/btn_new" />
</androidx.constraintlayout.widget.ConstraintLayout>